<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="jewellery_list_view" model="ir.ui.view">
        <field name="name">jewellery.list.view</field>
        <field name="model">jewellery.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="From List Changed."/>
                <field name="jewellery_name" />
            </tree>
        </field>
    </record>

    <record id="jewellery_form_view" model="ir.ui.view">
        <field name="name">jewellery.form.view</field>
        <field name="model">jewellery.profile</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>                        
                        <field name="jewellery_name" />
                        <field name="jewellery_degree" />
                        <field name="shape" />
                        <field name="carat" />
                        <field name="fluorescence" />
                        <field name="colour_grade" />
                        <field name="clarity_grade" />
                        <field name="cut" />
                        <field name="colour_grading_scale" />
                        <field name="clarity_grading_scale" />
                    </group>
                    <group>
                        <field name="name" />    
                        <field name="certificate_date" />
                        <!-- <field name="estalish_date" />
                        <field name="open_date"/>
                        <field name="jewellery_type" /> -->

                    </group>
                </group>
                <group>
                    <field name="documents" filename="document_name"
                           />
                    <field name="document_name" invisible="1"/>
                    <field name="jewellery_image" widget="image" invisible="1"/>
                    <field name="jewellery_description"
                           string="jewellery Description"/>
                </group>
                <group>

                </group>
            </form>
        </field>
    </record>

    <record id="action_jewellery_profile" model="ir.actions.act_window">
        <field name="name">Sertifika Olu≈ütur</field>
        <field name="res_model">jewellery.profile</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="jewellery_root_menu" name="Sertifikasyon" />
    <menuitem id="jewellery_sub_menu" parent="jewellery_root_menu"
              name="Olympia Jewellery"/>
    <menuitem id="jewellery_profile_menu" name="jewellery"
              action="action_jewellery_profile"
              parent="jewellery_sub_menu"/>

</odoo>