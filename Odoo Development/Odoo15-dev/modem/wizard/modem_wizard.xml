<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard's Action-->
        <record id="modem_wizard_action" model="ir.actions.act_window">
            <field name="name">Update Modem Information</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">modem.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <!-- Wizard's view-->
        <record id="modem_wizard_view" model="ir.ui.view">
            <field name="name">modem.wizard.form</field>
            <field name="model">modem.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="x_ip"/>
                            <field name="x_subnet"/>
                            <field name="x_dhcp"/>
                            <field name="x_enable_wireless"/>
                        </group>
                        <group>
                            <field name="x_enable_ssid1"/>
                            <field name="x_enable_ssid2"/>
                            <field name="x_enable_ssid3"/>
                            <field name="x_enable_ssid4"/>
                            <field name="x_manual_time"/>
                            <field name="x_new_password"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Save" name="update_modem_information" type="object" class="btn-primary"/>
                        <button string="Reject" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>