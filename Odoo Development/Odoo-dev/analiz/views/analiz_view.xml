<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--tree view of the model-->
    <record id="analiz_tree" model="ir.ui.view">
        <field name="name">analiz.profile.tree</field>
        <field name="model">analiz.profile</field>
        <field name="arch" type="xml">
            <tree string="Analiz">
                <field name="name"/>
				<field name="room"/>
				<field name="comment"/>
				<field name="x_score_good" groups="base.group_system,base.group_erp_manager"/>
				<field name="x_score_bad" groups="base.group_system,base.group_erp_manager"/>
				<field name="x_score_neutr" groups="base.group_system,base.group_erp_manager"/>
				<field name="x_comments_total" groups="base.group_system,base.group_erp_manager"/>
				<field name="x_points_good" groups="base.group_system,base.group_erp_manager"/>
				<field name="x_points_bad" groups="base.group_system,base.group_erp_manager"/>
				<field name="x_points_neutr" groups="base.group_system,base.group_erp_manager"/>
				<field name="x_points_nan" groups="base.group_system,base.group_erp_manager"/>
				<field name="x_TR_g" groups="base.group_system,base.group_erp_manager"/>
				<field name="x_EN_g" groups="base.group_system,base.group_erp_manager"/>
				<field name="x_RU_g" groups="base.group_system,base.group_erp_manager"/>
				<field name="x_DE_g" groups="base.group_system,base.group_erp_manager"/>
				<field name="x_TR_b" groups="base.group_system,base.group_erp_manager"/>
				<field name="x_EN_b" groups="base.group_system,base.group_erp_manager"/>
				<field name="x_RU_b" groups="base.group_system,base.group_erp_manager"/>
				<field name="x_DE_b" groups="base.group_system,base.group_erp_manager"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="analiz_graph">
        <field name="name">analiz.profile.graph</field>
        <field name="model">analiz.profile</field>
        <field name="arch" type="xml">
            <graph string="Analiz">
                <field name="name"/>
                <field name="analiz_degree" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="analiz_form_view" model="ir.ui.view">
        <field name="name">analiz.form.view</field>
        <field name="model">analiz.profile</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
						<field name="room"/>
						<field name="comment"/>
						<field name="x_score_good" groups="base.group_system,base.group_erp_manager"/>
						<field name="x_score_bad" groups="base.group_system,base.group_erp_manager"/>
						<field name="x_score_neutr" groups="base.group_system,base.group_erp_manager"/>
						<field name="x_comments_total" groups="base.group_system,base.group_erp_manager"/>
						<field name="x_points_good" groups="base.group_system,base.group_erp_manager"/>
						<field name="x_points_bad" groups="base.group_system,base.group_erp_manager"/>
						<field name="x_points_neutr" groups="base.group_system,base.group_erp_manager"/>
						<field name="x_points_nan" groups="base.group_system,base.group_erp_manager"/>
						<field name="x_TR_g" groups="base.group_system,base.group_erp_manager"/>
						<field name="x_EN_g" groups="base.group_system,base.group_erp_manager"/>
						<field name="x_RU_g" groups="base.group_system,base.group_erp_manager"/>
						<field name="x_DE_g" groups="base.group_system,base.group_erp_manager"/>
						<field name="x_TR_b" groups="base.group_system,base.group_erp_manager"/>
						<field name="x_EN_b" groups="base.group_system,base.group_erp_manager"/>
						<field name="x_RU_b" groups="base.group_system,base.group_erp_manager"/>
						<field name="x_DE_b" groups="base.group_system,base.group_erp_manager"/>
                    </group>
                </group>
                <group>
                    <field name="documents" filename="document_name" />
                    <field name="document_name" invisible="1"/>
                    <field name="analiz_image" widget="image"/>
                    <field name="analiz_description" string="analiz Description"/>
                </group>
                <group>
                </group>
            </form>
        </field>
    </record>

    <record id="analiz_kanban" model="ir.ui.view">
        <field name="name">analiz.profile.kanban</field>
        <field name="model">analiz.profile</field>
        <field name="arch" type="xml">
            <kanban default_group_by="name">
                <field name="id"/>
                <field name="analiz_image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hospital_patient_kanban">
                            <t t-if="record.analiz_image.raw_value">
                                <div class="o_kanban_image_fill_left d-none d-md-block"
                                     t-attf-style="background-image:url('#{kanban_image('analiz.profile', 'analiz_image', record.id.raw_value)}')"/>
                            </t>
                            <t t-else="">
                                <img class="o_kanban_image" alt="Avatar" t-att-src='_s + "/base/static/img/avatar.png"'/>
                            </t>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="o_kanban_tags_section"/>
                                <ul>
                                    <li>Age : <field name="name"/></li>
                                    <li>Doctor : <field name="name"/></li>
                                    <li>Email : <field name="name"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                    <searchpanel>
                        <field name="name" icon="fa-building"/>
                        <field name="name" select="multi" icon="fa-tags"/>
                    </searchpanel>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_analiz_profile" model="ir.actions.act_window">
        <field name="name">Analiz Olu≈ütur</field>
        <field name="res_model">analiz.profile</field>
        <field name="view_mode">tree,kanban,form,graph</field>
    </record>

    <menuitem id="analiz_root_menu" name="Sertifikasyon" />
    <menuitem id="analiz_sub_menu" parent="analiz_root_menu" name="Anket Analiz"/>
    <menuitem id="analiz_profile_menu" name="analiz" action="action_analiz_profile" parent="analiz_sub_menu"/>

</odoo>